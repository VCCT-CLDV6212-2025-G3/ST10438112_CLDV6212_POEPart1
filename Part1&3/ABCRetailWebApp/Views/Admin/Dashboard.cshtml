@model AdminDashboardViewModel

<h2 class="mt-4 mb-4">Admin Dashboard</h2>

<div class="row">

    <div class="col-md-4">
        <div class="card shadow-sm p-3">
            <h4>Products</h4>
            <p class="display-6">@Model.ProductCount</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Manage Products</a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm p-3">
            <h4>Customers</h4>
            <p class="display-6">@Model.CustomerCount</p>
            <a asp-controller="Customer" asp-action="Dashboard" class="btn btn-primary">View Customers</a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm p-3">
            <h4>Orders</h4>
            <p class="display-6">@Model.OrderCount</p>
            <a asp-controller="Orders" asp-action="Index" class="btn btn-primary">View Orders</a>
        </div>
    </div>

</div>